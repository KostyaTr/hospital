<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="hospital" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.github.KostyaTr.hospital.model.User</class>
        <class>com.github.KostyaTr.hospital.model.AuthUser</class>
        <class>com.github.KostyaTr.hospital.model.Patient</class>
        <class>com.github.KostyaTr.hospital.model.Receipt</class>
        <class>com.github.KostyaTr.hospital.model.Inpatient</class>
        <class>com.github.KostyaTr.hospital.model.TreatmentCourse</class>
        <class>com.github.KostyaTr.hospital.model.MedDoctor</class>
        <class>com.github.KostyaTr.hospital.model.Medicine</class>
        <class>com.github.KostyaTr.hospital.model.MedicalService</class>
        <class>com.github.KostyaTr.hospital.model.Card</class>
        <class>com.github.KostyaTr.hospital.model.DischargedPatient</class>
        <class>com.github.KostyaTr.hospital.model.GuestPatient</class>
        <class>com.github.KostyaTr.hospital.model.Speciality</class>
        <class>com.github.KostyaTr.hospital.model.Department</class>
        <class>com.github.KostyaTr.hospital.model.Chamber</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hospital_test?useUnicode=true&amp;serverTimezone=Europe/Moscow&amp;logger=com.mysql.cj.log.StandardLogger"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.pool_size" value="10"/>
        </properties>
    </persistence-unit>
</persistence>
