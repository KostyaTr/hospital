<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="hospital" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.github.KostyaTr.hospital.dao.entity.AuthUserEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.UserEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.CardEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.ChamberEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.DepartmentEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.DischargedPatientEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.GuestPatientEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.InpatientEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.MedDoctorEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.MedicalServiceEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.MedicineEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.ReceiptEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.PatientEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.SpecialityEntity</class>
        <class>com.github.KostyaTr.hospital.dao.entity.TreatmentCourseEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hospital?useUnicode=true&amp;serverTimezone=Europe/Moscow&amp;logger=com.mysql.cj.log.StandardLogger"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.pool_size" value="10"/>
        </properties>
    </persistence-unit>
</persistence>

